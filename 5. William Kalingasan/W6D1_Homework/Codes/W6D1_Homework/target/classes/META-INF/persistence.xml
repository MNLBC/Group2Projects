<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">


  <persistence-unit name="unitEclipseLink" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.oocl.mnlbc.item1.entity.Student</class>
    <class>com.oocl.mnlbc.item1.entity.Teacher</class>
    <class>com.oocl.mnlbc.item2.entity.User</class>
    <class>com.oocl.mnlbc.item2.entity.Orders</class>
    <class>com.oocl.mnlbc.item2.entity.OrderItem</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
      <property name="javax.persistence.jdbc.user" value="TUTOR"/>
      <property name="javax.persistence.jdbc.password" value="oracle"/>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver"/>
    </properties>
  </persistence-unit>



</persistence>
