                    "    prodSale : prodSale,",
                    "    prodStock : prodStock,",
                    "    prodImg : prodImg",
                    "}];",
                    "",
                    "if(form.isValid()&&validSale === true){",
                    "    if (prodPrice > 0){",
                    "        if(prodSale > 0){",
                    "            if(prodStock > 0){",
